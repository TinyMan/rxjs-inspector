{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": ["../node_modules/@types"],
    "lib": ["es2017", "dom"],
    "module": "es2015",
    "types": [],
    "paths": {
      "@rxjs-inspector/core/*": ["../packages/core/src/*"],
      "@rxjs-inspector/*": ["../packages/*/src"]
    }
  },
  "exclude": ["src/test.ts", "**/*.spec.ts"]
}
