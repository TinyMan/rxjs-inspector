{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": ["../node_modules/@types"],
    "lib": ["es2017", "dom"],
    "module": "es2015",
    "paths": {
      "@rxjs-inspector/core": ["../node_modules/@rxjs-inspector/core/src"],
      "@rxjs-inspector/devtools": [
        "../node_modules/@rxjs-inspector/devtools/src"
      ]
    }
  },
  "exclude": ["test.ts", "**/*.spec.ts"]
}
